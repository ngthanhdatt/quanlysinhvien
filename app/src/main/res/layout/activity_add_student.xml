<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addStudent">

    <EditText
        android:id="@+id/etStudentID"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:hint="ma sinh vien">
    </EditText>

    <EditText
        android:id="@+id/etStudentName"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/etStudentID"
        android:hint="ten sinh vien">
    </EditText>


    <EditText
        android:id="@+id/etStudentBorn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/etStudentName"
        android:hint="nam sinh">
    </EditText>

    <EditText
        android:id="@+id/etStudentCity"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/etStudentBorn"
        android:hint="que quan">
    </EditText>

    <TextView
        android:id="@+id/tvStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etStudentCity"
        android:text="Choose Student"
        />

    <Spinner
        android:id="@+id/spinnerStudentYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tvStudent"
        android:background="@android:drawable/btn_dropdown"
        />

    <Button
        android:id="@+id/btnSaveStudent"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinnerStudentYear"
        android:text="them sinh vien">
    </Button>

</RelativeLayout>